@page "/add-house"
@inject IMediator Mediator

<PageTitle>Add House - IMB_Realty</PageTitle>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add House</li>
    </ol>
</nav>

<h3 class="mt-5 mb-4">Add a House</h3>

@if (_submitSuccessful)
{
    <SuccessAlert Message="Your house has been added successfully!"></SuccessAlert>
}
else if (_errorMessage is not null)
{
    <ErrorAlert Message="@_errorMessage"></ErrorAlert>
}

<HouseForm @ref="_houseForm" OnSubmit="SubmitNewHouse" />

@code {
    private bool _submitSuccessful;
    private string? _errorMessage;
    private HouseForm _houseForm = default!;

    private async Task SubmitNewHouse(HouseDto house, IBrowserFile? image)
    {
        // Create AddHouseRequest for API
        var request = new AddHouseRequest(house);

        // Send house data to API
        var response = await Mediator.Send(request);

        if (response.HouseId == -1)
        {
            _submitSuccessful = false;
            _errorMessage = "There was a problem saving your house.";
            StateHasChanged();
            return;
        }

        // If no image, just show success
        if (image is null)
        {
            _submitSuccessful = true;
            _houseForm.ResetForm();
            StateHasChanged();
            return;
        }

        // Upload image
        _submitSuccessful = await ProcessImage(response.HouseId, image);

        if (_submitSuccessful)
        {
            _houseForm.ResetForm();
        }

        StateHasChanged();
    }

    private async Task<bool> ProcessImage(int houseId, IBrowserFile houseImage)
    {
        var imageUploadResponse = await Mediator.Send(new UploadHouseImageRequest(houseId, houseImage));

        if (string.IsNullOrWhiteSpace(imageUploadResponse.ImageName))
        {
            _errorMessage = "Your house was saved, but there was a problem uploading the image.";
            return false;
        }

        return true;
    }
}

